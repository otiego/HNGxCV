<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/ivory"
        app:cardElevation="5dp"
        android:padding="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">
            <ImageView
                android:id="@+id/iconEdu"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_baseline_cast_for_education_24"
                android:contentDescription="@string/category_description" />
            <TextView
                android:id="@+id/educationTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Education"
                android:textSize="35sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/iconEdu"
                android:contentDescription="@string/category_description" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <ImageView
                android:id="@+id/iconEdit"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_baseline_edit_24"
                android:contentDescription="@string/category_description"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:id="@+id/y1Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-2022 - Bsc. Computer Science"
                android:layout_marginTop="8dp"
                android:textColor="@color/maroon"
                android:textSize="18sp"
                android:layout_below="@+id/educationTv"/>

            <TextView
                android:id="@+id/sub1Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masinde Muliro University"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_below="@+id/y1Tv"/>

            <TextView
                android:id="@+id/y2Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sub1Tv"
                android:text="2021-2022 - AAD Certification"
                android:textColor="@color/maroon"
                android:layout_marginTop="8dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/sub2Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GADS Scholarship"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_below="@id/y2Tv"/>/>

            <TextView
                android:id="@+id/y3Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sub2Tv"
                android:textColor="@color/maroon"
                android:text="2021-2022 - O level Certification"
                android:layout_marginTop="8dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/sub3Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Migori Boys High School"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_below="@id/y3Tv"/>/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>